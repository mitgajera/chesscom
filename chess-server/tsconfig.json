{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "lib": ["ES6"], // Include only the necessary libraries
    "types": ["node"], // Include only the necessary type definitions
